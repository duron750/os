--- Makefile
+++ Makefile	1994/02/21 16:52:52
@@ -0,0 +1,14 @@
+CFLAGS = -O2 -m486 -fomit-frame-pointer \
+	-include /usr/include/bsd/bsd.h -I/usr/include/bsd
+LDLIBS = -lbsd
+LDFLAGS = -s -v
+
+biff: biff.o
+
+install: biff
+	install biff /usr/bin
+	install -m644 biff.1 /usr/man/man1
+
+clean:
+	rm -f *.o biff
+
